# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi

# Initialize Java
export JAVA_HOME="/opt/java/jdk1.8.0_11/"

HISTFILESIZE=5000

# some aliases
alias ssh='ssh -X'
alias lxplus='ssh afiqaize@lxplus.cern.ch'
alias lxplus5='ssh afiqaize@lxplus5.cern.ch'
alias bastion='ssh afiqaize@bastion.desy.de'
alias nafcms='ssh afiqaize@nafhh-cms06.desy.de'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ll='ls -ltrh'
alias la='ls -a'
alias ps="date; ps -fu $USER"
alias root5env='source /home/ieeya/root53434/bin/thisroot.sh'
alias root6env='source /home/ieeya/root60608/bin/thisroot.sh'
alias nemacs='emacs -nw'

# sudo related things
# if user is not root, pass all commands via sudo #
if [ $UID -ne 0 ]; then
    alias reboot='sudo reboot'
    alias update='sudo apt-get update && sudo apt-get upgrade'
    alias install='sudo apt-get install'
    alias upgrade='sudo apt-get dist-upgrade'
fi
